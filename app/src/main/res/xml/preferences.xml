<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="pref_cat_general"
        android:title="@string/preference_category_general">

    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_cat_general"
        android:title="@string/preference_category_data">
        <ListPreference
            android:key="pref_data_buffer_length"
            android:title="@string/preference_data_buffer_length"
            android:dialogTitle="@string/preference_data_buffer_length_dialog"
            android:entries="@array/preference_data_buffer_length_names"
            android:entryValues="@array/preference_data_buffer_length_values"
            android:defaultValue="thirty_min"/>
        <ListPreference
            android:key="pref_data_audio_format"
            android:title="@string/preference_data_audio_format"
            android:dialogTitle="@string/preference_data_audio_format_dialog"
            android:entries="@array/preference_data_audio_format_names"
            android:entryValues="@array/preference_data_audio_format_values"
            android:defaultValue="wav"/>
        <EditTextPreference
            android:defaultValue=""
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Save Location"
            android:key="save_location" />
        <SwitchPreference
            android:key="pref_data_voice_text"
            android:title="@string/preference_data_voice_text"
            android:defaultValue="false"/>
    </PreferenceCategory>

</PreferenceScreen>