<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/post_record_filename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_item_margin"
        android:layout_marginRight="@dimen/dialog_item_margin"
        android:hint="@string/post_record_filename"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_item_margin"
        android:layout_marginRight="@dimen/dialog_item_margin"
        android:text="@string/post_record_slice_clip"/>
    <com.appyvet.rangebar.RangeBar
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/post_record_rangebar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginLeft="@dimen/dialog_item_margin"
        android:layout_marginRight="@dimen/dialog_item_margin"
        custom:tickStart="0"
        custom:tickInterval="1"
        custom:tickEnd="10"/>

</LinearLayout>